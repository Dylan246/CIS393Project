<!DOCTYPE html>
<html lang="en">

<head>
    <div id="topcontainer">
        <img src="logo.png" alt="logo" width="60px">
        <header>&nbsp;&nbsp;Kaboom Pizza</header>
    </div>

    <nav class="navbar">
        <a href="./HomePage.html" class="hyperlink">Home</a>
        <a href="./Order.html" class="hyperlink">Order Now</a>
        <a href="./Location.html" class="hyperlink">Location</a>
        <a href="./Help.html" class="hyperlink">Help</a>
        <a href="./Cart" class="hyperlink">View Cart</a>
        <a href="./ManageOrders.html" class="hyperlink">Manage Orders</a>
    </nav>

    <link href="design.css" rel="stylesheet">
    <script src="cart.js"></script>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kaboom Pizza Cart</title>
</head>

<body>
    <h1>Order Details</h1>
    <table>
        <tr>
            <th>Order ID</th>
            <th>Name</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Toppings</th>
            <th>Items</th>
            <th>Method</th>
            <th>Address</th>
            <th>Date</th>
            <th>Time</th>
            <th>Status</th>
        </tr>

        <% data.forEach(function(orders){ %>
            <tr>
                <td>
                    <%= orders.order_id %>
                </td>
                <td>
                    <%= orders.name %>
                </td>
                <td>
                    <%=orders.phone_number%>
                </td>
                <td>
                    <%=orders.email%>
                </td>
                <td>
                    <%=orders.toppings%>
                </td>
                <td>
                    <%=orders.items%>
                </td>
                <td>
                    <%=orders.method%>
                </td>
                <td>
                    <%=orders.address%>
                </td>
                <td>
                    <%=orders.date%>
                </td>
                <td>
                    <%=orders.time%>
                </td>
                <td>
                    <%=orders.status%>
                </td>
                <% }) %>
            </tr>

    </table><br>
    <h3>
        <a href="./ManageOrders.html" style="color:rgb(191, 41, 41);  margin: auto; border-radius: 5px;">Return to Order Manager</a>
    </h3>
    <br><br><br>
</body>