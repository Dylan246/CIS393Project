    <title>Kaboom Pizza Cart</title>
</head>

<body>
    <h1>Your Cart</h1>
    <ul id="checkoutCart"></ul>

    <h1>Checkout</h1>
    <form method="POST" action="/order" id="form">
        <!--Stores cart data to pass to the order route-->
        <input type="text" name="cartText" id="cartText" hidden>
        <br>

        <h3>Select additional toppings for your pizza(s)</h3>
        <p>
            <label for="item1">Parmesan Cheese:</label>
            <input type="checkbox" name="item1" id="item1" value="Parmesan">
        </p>
        <p>
            <label for="item2">Bacon:</label>
            <input type="checkbox" name="item2" id="item2" value="Bacon">
        </p>
        <p>
            <label for="item3">Mushroom:</label>
            <input type="checkbox" name="item3" id="item3" value="Mushroom">
        </p>

        <br>

        <h3>Select order method</h3>
        <select name="option" id="option" required>
            <option value="Pickup">Pickup</option>
            <option value="Delivery">Delivery</option>
        </select><br>

        <div id="Delivery" hidden required>
            <h3>Please enter delivery details below.</h3>
            <textarea name="address" rows="4" cols="50" placeholder="Enter your address"></textarea>
        </div>
        <br>

        <h3>Select delivery or pickup time</h3>
        <h5>Please place orders during regular business hours</h5>
        <input type="date" name="date" id="date" required>
        <input type="time" name="time" id="time" required>
        <br><br>

        <h3>Enter your details below</h3>
        <label for="name">Name:</label>
        <input type="text" name="name" id="name" required>
        <br> <br>
        <label for="number">Phone Number:</label>
        <input type="tel" name="number" id="number" placeholder="###-###-####" required>
        <br> <br>
        <label for="email">Email:</label>
        <input type="email" name="email" id="email" placeholder="name@domain.com" required>
        <br><br><br>

        <input type="submit" id="submit" value="Submit Order">
    </form>
    <br>
    <br>
    <h3>
        <a href="./track" style="color:rgb(191, 41, 41);  margin: auto; border-radius: 5px;">Already place an order? Track it here!</a>
    </h3>
    <br>
    <br>



</body>

